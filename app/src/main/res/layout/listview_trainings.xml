<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <!-- Card con datos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:padding="16dp"
        style="@style/META_BACKGROUND"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"

            >



    <TextView
        android:id="@+id/lblEntrenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lblFecha"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        style="@style/TEXT_TITLE_COLOR_HISTORY"
        />

    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lblFecha"
        android:textSize="16sp"
        style="@style/TEXT_TITLE_COLOR_HISTORY"/>

    <TextView
        android:id="@+id/lblDistancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lblDistancia"
        android:textSize="16sp"
        style="@style/TEXT_TITLE_COLOR_HISTORY"/>

    <TextView
        android:id="@+id/lblTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lblTiempo"
        android:textSize="16sp"
        style="@style/TEXT_TITLE_COLOR_HISTORY"/>

    <TextView
        android:id="@+id/lblTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lblTipo"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        style="@style/TEXT_TITLE_COLOR_HISTORY"/>
    <TextView
        android:id="@+id/lblRitmo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lblRitmo"
        android:textSize="16sp"
        style="@style/TEXT_TITLE_COLOR_HISTORY"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>